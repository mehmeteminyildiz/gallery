<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/llItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardTick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="16dp"
        app:cardBackgroundColor="@color/white"
        app:cardElevation="0dp"
        app:shapeAppearance="@style/ShapeAppearanceOverlay.Material3.Button.50"
        app:strokeColor="@color/r_border"
        app:strokeWidth="1dp">

        <ImageView
            android:id="@+id/imgTick"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_margin="4dp"
            android:src="@drawable/baseline_done_24"
            android:visibility="invisible"
            app:tint="@color/r_black" />

    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/tvFileName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginVertical="16dp"
        android:layout_marginStart="8dp"
        android:layout_weight="1"
        android:ellipsize="end"
        android:fontFamily="@font/lato"
        android:maxLines="1"
        android:textColor="@color/r_black"
        android:textSize="16sp"
        tools:text="Document name is here" />

    <com.google.android.material.card.MaterialCardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginVertical="16dp"
        android:layout_marginEnd="16dp"
        app:cardBackgroundColor="@color/r_black"
        app:cardElevation="0dp"
        app:shapeAppearance="@style/ShapeAppearanceOverlay.Material3.Button.50"
        app:strokeWidth="0dp">

        <TextView
            android:id="@+id/tvSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato_bold"
            android:paddingHorizontal="8dp"
            android:paddingVertical="4dp"
            tools:text="56 mb"
            android:textColor="@color/white"
            android:textSize="14sp" />

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>